  otherHabitat               String?
  treasure                   String?
  ac                         String?
  hp                         String?
  initiative                 String?
  walk                       String?
  burrow                     String?
  climb                      String?
  fly                        String?
  hover                      String?
  swim                       String?
  strMod                     String?
  intMod                     String?
